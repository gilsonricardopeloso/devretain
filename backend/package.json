{
  "name": "devretain-backend",
  "version": "0.1.0",
  "description": "DevRetain - Knowledge Retention System Backend",
  "author": "",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit migrate",
    "db:reset": "ts-node src/db/reset.ts",
    "db:migrate:create": "drizzle-kit generate",
    "db:migrate:up": "drizzle-kit migrate",
    "db:migrate:down": "ts-node src/db/reset.ts",
    "db:migrate:status": "drizzle-kit check",
    "db:studio": "drizzle-kit studio",
    "db:init": "npm run db:generate && npm run db:migrate:up",
    "db:migrate": "npm run db:generate && npm run db:migrate:up",
    "db:seed": "ts-node src/db/seed.ts",
    "db:setup": "npm run db:init && npm run db:seed",
    "db:container:up": "docker run --name life-inventory-db -e POSTGRES_DB=life_inventory -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_HOST_AUTH_METHOD=trust -e POSTGRES_INITDB_ARGS=\"--auth-host=trust\" -p 5432:5432 -d postgres:latest",
    "db:container:down": "docker stop life-inventory-db && docker rm life-inventory-db",
    "db:container:status": "docker ps -a | findstr life-inventory-db",
    "db:container:logs": "docker logs -f life-inventory-db"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.1.6",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.43.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/jest": "^29.5.14",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.36",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.31.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
 },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}

